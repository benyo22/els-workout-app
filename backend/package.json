{
  "name": "restapi",
  "version": "1.0.0",
  "main": "start.js",
  "scripts": {
    "dev": "nodemon start.js",
    "start": "node start.js",
    "prod-setup": "npm i && npm run migrate && npm run seed && npm run prod",
    "prod": "cross-env NODE_ENV=production node start.js",
    "seed": "npx sequelize-cli db:seed:all --config=config/config.js",
    "migrate": "npx sequelize-cli db:migrate --config=config/config.js",
    "reset_db": "npx sequelize-cli db:migrate:undo:all --config=config/config.js && npm run migrate && npm run seed",
    "test": "jest"
  },
  "author": "Farkas Bence",
  "license": "ISC",
  "description": "Node.js, Sequelize, MySQL and REST APIs with Fastify in CommonJS",
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.2",
    "@fastify/jwt": "^9.0.4",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/static": "^8.1.1",
    "argon2": "^0.41.1",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.7",
    "fastify": "^5.3.2",
    "http-status-codes": "^2.3.0",
    "mysql2": "^3.12.0",
    "object.omit": "^3.0.0",
    "sequelize": "^6.37.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.1.0"
  }
}
